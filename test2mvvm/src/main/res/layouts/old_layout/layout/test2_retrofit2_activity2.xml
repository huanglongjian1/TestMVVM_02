<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/test2_activity_add_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="添加"
                android:textSize="30sp" />

            <Button
                android:id="@+id/test2_activity_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击我"
                android:textSize="30sp" />

            <Button
                android:id="@+id/test2_activity_update_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更新"
                android:textSize="30sp" />

            <Button
                android:id="@+id/test2_activity_clear_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="清空"
                android:textSize="30sp" />

            <Button
                android:id="@+id/test2_activity_update_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/test2_activity_livedata_tv"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:text="显示livedata"
                android:textSize="30sp" />

            <Button
                android:id="@+id/test2_activity_show_dialog_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="弹出对话框"
                android:textSize="30sp" />


            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>