<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="切换肤色"
        app:layout_constraintTop_toBottomOf="@id/text_app" />

    <Button
        android:id="@+id/btn_goto_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转"
        app:layout_constraintTop_toBottomOf="@id/btn_app" />

    <Button
        android:id="@+id/btn_insert_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="插入"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_goto_app" />

    <Button
        android:id="@+id/btn_query_all_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询所有"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_insert_app" />

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/btn_goto_app" />

    <FrameLayout
        android:id="@+id/fragment_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>